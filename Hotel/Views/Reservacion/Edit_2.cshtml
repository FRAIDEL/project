<div class="class_editar">
@model Hotel.Models.Reserva

<script src="@Url.Content("~/Scripts/jquery.blockUI.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/Events/jquery.numeric.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/Events/Events.js")" type="text/javascript"></script>
@ViewBag.error
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
    <br />
        <b>@ViewBag.fecha_incorrecta</b>
        @ViewBag.error
        @Html.HiddenFor(model => model.HabitacionID)
        @Html.HiddenFor(model => model.ReservaID)
        @Html.HiddenFor(model => model.ClienteID)
        @Html.HiddenFor(model => model.fecha_creacion.Date)
        @Html.HiddenFor(model => model.IP_creacion)
        @Html.HiddenFor(model => model.User_creacion)
        <table>
            <tr>
                <th>@Html.LabelFor(model => model.Fecha_ingreso.Date)</th>
                <th>@Html.LabelFor(model => model.Fecha_salida.Date)</th>
                <th>@Html.LabelFor(model => model.Cantidad_dias)</th>
            </tr>
            <tr>
                <div class="editor-label">
                    @Html.LabelFor(model => model.Hora_ingreso)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Hora_ingreso)
                    @Html.ValidationMessageFor(model => model.Hora_ingreso)
                </div>
            </tr>
            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Hora_salida)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Hora_salida)
                        @Html.ValidationMessageFor(model => model.Hora_salida)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Fecha_ingreso.Date)
                        @Html.ValidationMessageFor(model => model.Fecha_ingreso.Date)
                    </div>
                </td>
                <input type="hidden" id="User_modificacion" name="User_modificacion" value="@User.Identity.Name" />
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Fecha_salida.Date)
                        @Html.ValidationMessageFor(model => model.Fecha_salida.Date)
                    </div>        
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Cantidad_dias)
                        @Html.ValidationMessageFor(model => model.Cantidad_dias)
                    </div>   
                </td>
            </tr>
            <br />
            <tr>
                <th>@Html.LabelFor(model => model.Total)</th>
                <th>@Html.LabelFor(model => model.Abonar)</th>
                <th>@Html.LabelFor(model => model.Restante)</th>
                <th>@Html.LabelFor(model => model.Estado)</th>
            </tr>
            <tr>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Total)
                        @Html.ValidationMessageFor(model => model.Total)
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Abonar)
                        @Html.ValidationMessageFor(model => model.Abonar)
                    </div>   
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Restante)
                        @Html.ValidationMessageFor(model => model.Restante)
                    </div>   
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Estado)
                        @Html.ValidationMessageFor(model => model.Estado)
                    </div>   
                </td>
            </tr>
            <tr>
                <td>
                   <div class="editor-label">
                        @Html.LabelFor(model => model.Observaciones)
                    </div>
                    <div class="editor-field">
                        @Html.TextAreaFor(model => model.Observaciones)
                        @Html.ValidationMessageFor(model => model.Observaciones)
                    </div>  
                </td>
                
            </tr>
        </table>
        <p>
            <input type="submit" value="Actualizar"@* id="edit_reserva" *@/>
        </p>
    </fieldset>
}

