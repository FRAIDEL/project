@model Hotel.Models.Reserva

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
         @ViewBag.error
        @Html.HiddenFor(model => model.HabitacionID_)
        @Html.HiddenFor(model => model.ReservacionID)
        @Html.HiddenFor(model => model.ClienteID_)
        @Html.HiddenFor(model => model.Fecha_creacion.Value.Date)
        @Html.HiddenFor(model => model.IP_creacion)
        @Html.HiddenFor(model => model.User_creacion)

        @Html.HiddenFor(model => model.ReservacionID)

        <div class="editor-label">
            @Html.LabelFor(model => model.Fecha_ingreso)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Fecha_ingreso)
            @Html.ValidationMessageFor(model => model.Fecha_ingreso)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Hora_ingreso)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Hora_ingreso)
            @Html.ValidationMessageFor(model => model.Hora_ingreso)
        </div>

        <div class="editor-label">
            Fecha egreso
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Fecha_egreso)
            @Html.ValidationMessageFor(model => model.Fecha_egreso)
        </div>

        <div class="editor-label">
            Hora egreso
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Hora_egreso)
            @Html.ValidationMessageFor(model => model.Hora_egreso)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Cantidad_dias)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Cantidad_dias)
            @Html.ValidationMessageFor(model => model.Cantidad_dias)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Total)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Total)
            @Html.ValidationMessageFor(model => model.Total)
        </div>

        <div class="editor-label">
            Abono
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Abono)
