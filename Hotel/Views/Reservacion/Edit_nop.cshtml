        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IP_creacion)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IP_creacion)
            @Html.ValidationMessageFor(model => model.IP_creacion)
        </div>
        <input type="hidden" id="User_modificacion" name="User_modificacion" value="@User.Identity.Name" />
        
        <div class="editor-label">
            @Html.LabelFor(model => model.Estado)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Estado)
            @Html.ValidationMessageFor(model => model.Estado)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Fecha_entrega)
