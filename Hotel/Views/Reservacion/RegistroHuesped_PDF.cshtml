@*@model Hotel.Models.Cliente*@
@using Hotel.Models
@model _RegistroCliente
           
<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h2 align="center">REGISTRO OBLIGATORIO DE VISITANTES</h2><br />
<h2 align="center">HABITACION Nº <b>@Model.habitacion.Num_habitacion</b></h2>
<br />
<table border="1" cellpadding="3" cellspacing="3">
    @*<tr bgcolor="#777777" color="#ffffff">*@
    <tr>
        <td><b>F. INGRESO</b></td>
        <td><b>DIA:</b> @Model.Fecha_ingreso.Day</td>
        <td><b>MES:</b> @Model.Fecha_ingreso.Month</td>
        <td><b>A&Ntilde;O:</b> @Model.Fecha_ingreso.Year</td>
        <td><b>HORA:</b> @Model.hora_ingreso.Hours:@Model.hora_ingreso.Minutes:@Model.hora_ingreso.Seconds</td>
    </tr>
    <tr>
        <td><b>F. EGRESO</b></td>
        <td><b>DIA:</b> @Model.Fecha_salida.Day</td>
        <td><b>MES:</b> @Model.Fecha_salida.Month</td>
        <td><b>A&Ntilde;O:</b> @Model.Fecha_salida.Year</td>
        <td><b>HORA:</b></td>
    </tr>
</table>
<table border="1" cellpadding="3" cellspacing="3">
    @*<tr></tr>*@
    <tr>
        <td><b>NOMBRE:</b> @Model.cliente.Nombres</td>
        <td><b>NACIONALIDAD:</b> @Model.cliente.NacionaLidad</td>
    </tr>
    <tr>
        <td><b>CEDULA Nº:</b> @Model.cliente.Identificacion</td>
        <td><b>DE:</b> @Model.cliente.Lugar_expedicion</td>
    </tr>
</table>
<table border="1" cellpadding="3" cellspacing="3">
    <tr>
        <td><b>DIRECCION RESIDENCIA:</b> @Model.cliente.Dir_residencia</td>
    </tr>
</table>
<table border="1" cellpadding="3" cellspacing="3">
    <tr>
        <td><b>CIUDAD:</b> @Model.cliente.Ciudad</td>
        <td><b>TEL. FIJO:</b> @Model.cliente.Telefono_fijo</td>
    </tr>
    <tr>
        <td><b>PROFESION:</b> @Model.cliente.Profesion</td>
        <td><b>TEL. CELULAR:</b> @Model.cliente.Telefono_celular</td>
    </tr>
    <tr>
        <td><b>PROCEDENCIA:</b> @Model.cliente.Procedencia</td>
        <td><b>DESTINO FINAL:</b> @Model.cliente.Destino_final</td>
    </tr>
    <tr>
        <td><b>MOTIVO DEL VIAJE:</b> @Model.cliente.Motivo_del_Viaje</td>
        <td><b>CLASE DE VEHICULO:</b> @Model.cliente.Clase_de_vehiculo</td>
    </tr>
</table>
<table border="1" cellpadding="3" cellspacing="3">
    <tr>
        <td><b>MARCA:</b> @Model.cliente.Marca</td>
        <td><b>PLACA:</b> @Model.cliente.Placa</td>
        <td><b>COLOR:</b> @Model.cliente.Color</td>
    </tr>
</table>
<br />
<table border="1" cellpadding="3" cellspacing="3">
    <tr>
        <td align="center"><b>NOMBRES</b></td>
        <td align="center"><b>IDENTIFICACION</b></td>
        <td align="center"><b>EDAD</b></td>
        <td align="center"><b>EXPEDIDA EN</b></td>
    </tr>
    @foreach(var i in Model.Acompaniantes){
        <tr><td align="center">@i.Nombres @i.Apellidos</td></tr>
        <tr><td align="center">@i.Identificacion</td></tr>
        <tr><td align="center">@i.Edad</td></tr>
        <tr><td align="center">@i.Lugar_expedicion</td></tr>        
    }
</table>
<br />
<br />
