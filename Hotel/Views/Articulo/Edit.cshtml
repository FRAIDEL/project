<div id="all_edit_art">
@model Hotel.Models.Articulo

<script src="@Url.Content("~/Content/Events/jquery.numeric.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/Events/jquery.form.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.blockUI.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/Events/Events.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@ViewBag.error

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Articulo</legend>

        @Html.HiddenFor(model => model.ArticuloID)
        <div class="editor-label">
            @Html.LabelFor(model => model.Nombre_articulo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nombre_articulo)
            @Html.ValidationMessageFor(model => model.Nombre_articulo)
        </div>

        <div class="editor-label">
            Cantidad de articlulo(s)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Cantidad_articulo)
            @Html.ValidationMessageFor(model => model.Cantidad_articulo)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Descripcion)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Descripcion)
            @Html.ValidationMessageFor(model => model.Descripcion)
        </div>

        <p>
            <input type="submit" value="Actualizar" id="edit_articulo" />
        </p>
    </fieldset>
}
<div id="hide_all_edit_art">Ocultar</div>
</div>