@model Hotel.Models.Habitacion

<h2>Habitacion</h2>
@ViewBag.error
<script src="@Url.Content("~/Scripts/jquery-1.8.3.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Create", "Habitacion", FormMethod.Post@*, new { enctype = "multipart/form-data" }*@))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="editor-label">
            @Html.LabelFor(model => model.Num_habitacion)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Num_habitacion)
            @Html.ValidationMessageFor(model => model.Num_habitacion)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Num_piso)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Num_piso)
            @Html.ValidationMessageFor(model => model.Num_piso)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Descripcion)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Descripcion)
            @Html.ValidationMessageFor(model => model.Descripcion)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Precio_habitacion)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Precio_habitacion)
            @Html.ValidationMessageFor(model => model.Precio_habitacion)
        </div>
        <p>
            <input type="submit" value="Crear" />
        </p>
    </fieldset>
}
